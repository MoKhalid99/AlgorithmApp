@if (IsVisible)
{
    <div class="transition-overlay" @onclick="OnUserClick">
        <div class="stars-bg"></div>
        <div class="info-card animate__animated animate__zoomIn">
            <div class="icon-header">
                <i class="bi bi-lightbulb-fill"></i>
                <span>هل تعلم؟</span>
            </div>

            <h2 class="info-text">@currentFact</h2>

            <p class="hint-text">اضغط في أي مكان للمتابعة...</p>
        </div>
    </div>
}

@code {
    private bool IsVisible = false;
    private string currentFact = "";

    // اول اما نضغط متابعة نرسل الحدث للخارج
    [Parameter] public EventCallback OnProceed { get; set; }

    private List<string> Facts = new()
    {
        "هل تعلم ان cout تعني طباعةC++في لغة ال  ",
        "لغة C# كانت تسمى في البداية 'Cool'.",
        "رمز الخطأ 404 سُمي بذلك لأن الغرفة 404 كانت مفقودة في سيرفرات CERN.",
        "تم إنشاء لغة Python كأول مشروع هواية خلال عطلة عيد الميلاد.",
        "أول فيروس كمبيوتر سمي 'Creeper' وتم إنشاؤه عام 1971.",
        "كلمة 'Bug' جاءت بسبب حشرة حقيقية علقت داخل جهاز كمبيوتر.",
        "يوجد أكثر من 700 لغة برمجة حول العالم."
    };

    // لإظهار الشاشة و معلومة جديدة
    public void Show()
    {
        currentFact = Facts[new Random().Next(Facts.Count)];
        IsVisible = true;
        StateHasChanged();
    }

    public void Hide()
    {
        IsVisible = false;
        StateHasChanged();
    }

    private async Task OnUserClick()
    {
        await OnProceed.InvokeAsync();
    }
}
<style>
    .transition-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(10px); /* تأثير ضبابي للخلفية */
        z-index: 10000;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: 0.5s;
    }

    .info-content {
        position: relative;
        text-align: center;
        max-width: 800px;
        padding: 40px;
        box-shadow: 0 0 100px rgba(138, 43, 226, 0.3);
        border-radius: 30px;
    }

    .glow-effect {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(138, 43, 226, 0.4) 0%, transparent 70%);
        z-index: -1;
        filter: blur(40px);
    }

    .info-icon {
        font-size: 4rem;
        color: #00d2ff;
        margin-bottom: 20px;
        display: block;
    }

    .info-title {
        color: #8a2be2;
        font-weight: 800;
        font-size: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 15px;
    }

    .info-text {
        color: #00d2ff;
        font-size: 2.2rem;
        font-weight: bold;
        line-height: 1.4;
        text-shadow: 0 0 20px rgba(0, 210, 255, 0.4);
    }

    .tap-hint {
        margin-top: 40px;
        color: #8a2be2;
        font-size: 0.9rem;
        opacity: 0.7;
        letter-spacing: 3px;
        animation: pulse 2s infinite;
    }

    @("@") keyframes pulse {
        0% {
            opacity: 0.3;
        }

        50% {
            opacity: 1;
        }

        100% {
            opacity: 0.3;
        }
    }

</style>