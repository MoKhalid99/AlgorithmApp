@page "/"
@rendermode InteractiveServer

<div class="main-bg">
    <div class="stars-container"></div>

    <div class="container py-5 text-center position-relative" style="z-index: 2;">

        <div class="mb-5 animate__animated animate__fadeInDown">
            <h1 class="hero-title">اختبر مهاراتك البرمجية </h1>
            <p class="text-light opacity-75 fs-5">اختر التحدي </p>
        </div>

        <div class="section-container mb-5 animate__animated animate__fadeInUp">
            <div class="section-header d-flex align-items-center mb-4">
                <div class="icon-box me-3">
                    <i class="bi bi-globe2"></i>
                </div>
                <h3 class="text-white fw-bold m-0 text-end w-100">تطوير الويب <span class="text-info fs-6 fw-normal">(Web Development)</span></h3>
            </div>
            <div class="row g-4">
                @foreach (var lang in WebLanguages)
                {
                    <div class="col-6 col-md-3">
                        <a href="/quiz/@lang.UrlName" class="glass-card text-decoration-none">
                            <div class="icon-glow-box">
                                <i class="@lang.IconClass"></i>
                            </div>
                            <h5 class="lang-name">@lang.Name</h5>
                            <span class="start-badge">ابدأ الآن</span>
                        </a>
                    </div>
                }
            </div>
        </div>

        <hr class="my-5 border-secondary opacity-50" />

        <div class="section-container animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
            <div class="section-header d-flex align-items-center mb-4">
                <div class="icon-box me-3 bg-warning-gradient">
                    <i class="bi bi-cpu-fill"></i>
                </div>
                <h3 class="text-white fw-bold m-0 text-end w-100">البرمجة  <span class="text-warning fs-6 fw-normal">(Backend & Core)</span></h3>
            </div>

            <div class="row g-4">
                @foreach (var lang in OtherLanguages)
                {
                    <div class="col-6 col-md-3">
                        <a href="/quiz/@lang.UrlName" class="glass-card text-decoration-none">
                            <div class="icon-glow-box">
                                <i class="@lang.IconClass"></i>
                            </div>
                            <h5 class="lang-name">@lang.Name</h5>
                            <span class="start-badge">ابدأ الآن</span>
                        </a>
                    </div>
                }
            </div>
        </div>

    </div>
</div>


@code {
    
    record LanguageItem(string Name, string UrlName, string Image, string IconClass = "");

    List<LanguageItem> WebLanguages = new()
    {
        new("HTML", "HTML", "https://cdn.pixabay.com/photo/2017/08/05/11/16/logo-2582748_1280.png"),
        new("CSS", "CSS", "https://cdn.pixabay.com/photo/2017/08/05/11/16/logo-2582747_1280.png"),
        new("JavaScript", "JavaScript", "https://cdn.pixabay.com/photo/2015/04/23/17/41/javascript-736400_1280.png"),
        new("React", "React", "https://upload.wikimedia.org/wikipedia/commons/a/a7/React-icon.svg")
    };

    List<LanguageItem> OtherLanguages = new()
    {
        new("C#", "CSharp", "", "https://upload.wikimedia.org/wikipedia/commons/4/4f/Csharp_Logo.png"),
        new("Python", "Python", "https://upload.wikimedia.org/wikipedia/commons/c/c3/Python-logo-notext.svg"),
        new("Java", "Java", "https://upload.wikimedia.org/wikipedia/en/3/30/Java_programming_language_logo.svg")
    };
}
