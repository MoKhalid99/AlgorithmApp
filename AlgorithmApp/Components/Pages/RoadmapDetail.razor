@page "/roadmaps/{CategoryId}/{PathName}"

<div class="main-bg">
    <div class="container py-5 text-center">
        <h1 class="display-5 fw-bold mb-5">مسار @PathName</h1>

        <div class="position-relative">
            <div class="roadmap-line"></div>
            @foreach (var step in Steps)
            {
                <div class="step-box shadow-lg">
                    <h5 class="fw-bold mb-1">@step.Title</h5>
                    <p class="small mb-0 opacity-75">@step.Desc</p>
                </div>
            }
        </div>

        <div class="mt-5">
            <div class="p-3 px-5 border border-success text-success rounded-pill d-inline-block fw-bold bg-dark">
                أنت الآن جاهز لسوق العمل <i class="bi bi-check-circle-fill"></i>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string CategoryId { get; set; }
    [Parameter] public string PathName { get; set; }

    record Step(string Title, string Desc);
    List<Step> Steps = new() {
        new("C# Basics", "الأساسيات، المصفوفات، الدوال"),
        new(".NET Core", "فهم إطار العمل الحديث"),
        new("ASP.NET Web API", "بناء الخدمات الخلفية"),
        new("Entity Framework", "إدارة قواعد البيانات"),
        new("SQL Server", "التعامل مع Microsoft SQL")
    };
}