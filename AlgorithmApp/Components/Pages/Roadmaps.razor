@page "/roadmaps"
@rendermode InteractiveServer

<div class="main-bg">
    <div class="stars-container"></div>
    <div class="container py-5 text-center">
        <div class="mb-5">
            <i class="bi bi-map text-warning display-1"></i>
            <h1 class="display-4 fw-bold mt-3">خريطة البرمجية</h1>
            <p class="opacity-75">دليلك الشامل لاستكشاف مجالات البرمجة المختلفة</p>
        </div>

        <div class="row g-4">
            @foreach (var cat in Categories)
            {
                <div class="col-md-4">
                    <a href="/roadmaps/@cat.Id" class="roadmap-card h-100">
                        <h3>@cat.Title</h3>
                        <p class="small opacity-50 my-3">@cat.Desc</p>
                        <span class="text-info">استكشف المسارات <i class="bi bi-chevron-left"></i></span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@code {
    record Category(string Id, string Title, string Desc);
    List<Category> Categories = new() {
        new("frontend", "تطوير الواجهات الأمامية", "بناء الجانب المرئي والتفاعلي من المواقع"),
        new("backend", "تطوير الواجهات الخلفية", "إدارة السيرفرات وقواعد البيانات والمنطق"),
        new("mobile", "تطوير تطبيقات الموبايل", "بناء تطبيقات Android و iOS")
    };
}